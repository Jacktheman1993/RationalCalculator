<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="Stack4"
            android:textSize="20pt"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stack4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/stack3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="Stack3"
            android:textSize="20pt"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stack3"
            app:layout_constraintTop_toBottomOf="@id/stack4"
            app:layout_constraintBottom_toTopOf="@id/stack2"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="Stack2"
            android:textSize="20pt"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/stack2"
            app:layout_constraintTop_toBottomOf="@id/stack3"
            app:layout_constraintBottom_toTopOf="@id/stack1"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="Stack1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20pt"
            android:textAlignment="center"
            android:id="@+id/stack1"
            app:layout_constraintTop_toBottomOf="@id/stack2"
            app:layout_constraintBottom_toTopOf="@id/editText2"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/stack1"
            app:layout_constraintVertical_bias="0.092"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline"/>
    <Button
            android:text="+"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/minusButton"
            android:id="@+id/plusButton" app:layout_constraintTop_toTopOf="@+id/guideline"
            android:layout_marginTop="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline"
    />
    <Button
            android:text="-"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/plusButton"
            app:layout_constraintEnd_toStartOf="@id/timesButton"
            android:id="@+id/minusButton" android:layout_marginTop="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline"
    />
    <Button
            android:text="*"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/minusButton"
            app:layout_constraintEnd_toStartOf="@id/divButton"
            android:id="@+id/timesButton" android:layout_marginTop="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline"
    />
    <Button
            android:text="/"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/timesButton"
            app:layout_constraintEnd_toStartOf="@id/enterButton"
            android:id="@+id/divButton" android:layout_marginTop="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline"
            />
    <Button
            android:text="Enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/divButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/enterButton"
            android:layout_marginTop="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline"
            />
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="347dp"
            android:id="@+id/guideline"/>

</android.support.constraint.ConstraintLayout>
