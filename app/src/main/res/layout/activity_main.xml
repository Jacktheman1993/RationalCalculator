<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:text="Stack1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24pt"
            android:id="@+id/stack1" android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stack2"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Stack2"
            android:textSize="24pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stack2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginTop="16dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/stack1" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.092"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="+"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/minusButton"
            android:id="@+id/plusButton" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="365dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="318dp"/>
    <Button
            android:text="-"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/plusButton"
            app:layout_constraintEnd_toStartOf="@id/timesButton"
            android:id="@+id/minusButton" android:layout_marginTop="91dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="318dp"/>
    <Button
            android:text="*"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/minusButton"
            app:layout_constraintEnd_toStartOf="@id/divButton"
            android:id="@+id/timesButton" android:layout_marginTop="91dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="318dp"/>
    <Button
            android:text="/"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/timesButton"
            app:layout_constraintEnd_toStartOf="@id/enterButton"
            android:id="@+id/divButton" android:layout_marginTop="91dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="318dp"/>
    <Button
            android:text="Enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/divButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/enterButton" android:layout_marginTop="91dp"
            app:layout_constraintTop_toBottomOf="@+id/editText2" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="318dp"/>

</android.support.constraint.ConstraintLayout>
